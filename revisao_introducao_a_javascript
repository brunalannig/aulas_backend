//Faça 3 perguntas ao usuário, pedindo 3 notas. Calcule a média destas notas.
const readlineSync = require('readline-sync')
const nota1 = Number(readlineSync.question("Digite sua nota: "))
const nota2 = Number(readlineSync.question("Digite sua nota: "))
const nota3 = Number(readlineSync.question("Digite sua nota: "))

const media=((nota1 + nota2 + nota3)/3)
console.log(`Sua média é: ${media}`)

//  Peça para o usuário inserir dois numeros. Compare estes numeros e verifique se o primerio numero é maior, menor, iguak, etc que o segundo.
const readlineSync = require('readline-sync')
const num1 = (readlineSync.question("Digite um numero:"))
const num2 = (readlineSync.question("Digite outro numero:"))
const igual = (num1===num2)
const diferente = (num1!==num2)
const maior = (num1<num2)
const menor = (num1>num2)
const maiorIgual = (num1>=num2)
const menorIgual = (num1<=num2)

console.log(`O ${num1} é igual a ${num2}? ${igual}.`)
console.log(`O ${num1} é diferente a ${num2}? ${diferente}.`)
console.log(`O ${num1} é menor a ${num2}? ${menor}.`)
console.log(`O ${num1} é maior a ${num2}? ${maior}.`)
console.log(`O ${num1} é maior ou igual a ${num2}? ${maiorIgual}.`)
console.log(`O ${num1} é menor igual a ${num2}? ${menorIgual}.`)
console.log(`As comparações são: ${igual}, ${diferente}, ${menor}, ${maior}, ${maiorIgual} e ${menorIgual}.`)

